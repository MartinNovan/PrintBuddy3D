<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dockControls="clr-namespace:PrintBuddy3D.Views.Pages.PrinterControlsDockView"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="dockControls:PrinterConsoleControlViewModel"
             x:Class="PrintBuddy3D.Views.Pages.PrinterControlsDockView.PrinterConsoleControlView">
    <Grid RowDefinitions="Auto, *" Margin="5">
        <TextBox Watermark="Enter command..." Text="{Binding Command, Mode=TwoWay}" KeyDown="OnTextBoxKeyDown">
            <TextBox.InnerRightContent>
                <Button Classes="Basic" Command="{Binding SendCommandToPrinterCommand}">
                    <avalonia:MaterialIcon Kind="SubdirectoryArrowLeft" />
                </Button>
            </TextBox.InnerRightContent>
        </TextBox>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Output}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Output">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="WrapWithOverflow"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
